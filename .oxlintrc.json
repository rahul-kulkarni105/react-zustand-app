{
  "rules": {
    "no-unused-vars": "error",
    "no-console": "off",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "error",
    "no-trailing-spaces": "error",
    "no-multiple-empty-lines": "error",
    "eol-last": "error",
    "comma-dangle": "error",
    "semi": "error",
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "no-mixed-spaces-and-tabs": "error"
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["oxlint/recommended"],
  "ignorePatterns": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "*.config.js",
    "*.config.ts"
  ]
}
